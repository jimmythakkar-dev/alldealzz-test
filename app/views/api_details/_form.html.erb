<div class="row title_header">
  <div class="col-md-4">
  <%= form_for([ @api_detail], html: { multipart: true, class: "form-horizontal api_detail_form"}) do |f| %>
  <%= render "shared/error_messages", target: @api_detail %>
      <div class="form-group">
        <%= f.label :api_version, class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.select :api_version, ApiDetail.pluck(:api_version).uniq, include_blank: "Select", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :device_type, class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <label class="checkbox-inline">
            <%= f.radio_button :device_type, false %> Google
          </label>
          <label class="checkbox-inline">
            <%= f.radio_button :device_type, true %> Apple
          </label>
        </div>
      </div>
      <div class="form-group">
      <%= f.label :app_version, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :app_version, class: "form-control" %>
      </div>  
    </div>
    <div class="form-group">
      <%= f.label :message, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :message, class: "form-control editor" %>
      </div>  
    </div>

    <div class="form-group">
      <%= f.label :app_type, "Update Type", class: "col-sm-2 control-label" %>

      <div class="col-sm-10">
        <%= f.select :app_type, [1, 2], include_blank: "Select", class: "form-control" %>
        <i>(1 : Normal Update, 2 :Forcefully Update)</i>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: "btn btn-default" %>
      </div>
    </div>
    <% end %>  
  </div>
</div>
