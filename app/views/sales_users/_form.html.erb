<div class="row">
  <%= form_for(@sales_user, html: {class: "form-horizontal"}) do |f| %>
    <%= render "shared/error_messages", target: @sales_user %> 
    
  	<%#- if (f.object.new_record?) #or (can? :manage, Mall) %>
  	  <div class="row">
	      <div class="col-md-6">
	        <div class="form-group">
	          <%= f.label :user_id, "User ID *",class: "col-sm-3 control-label" %>
	          <div class="col-sm-8">
	            <%= f.text_field :identifier, class: "form-control" %>
	          </div>
	        </div>
	        <div class="form-group">
	          <%= f.label :password, "Password *", class: "col-sm-3 control-label" %>
	          <div class="col-sm-8">
	            <%= f.text_field :password, class: "form-control" %>
	          </div>
	        </div>
	        <div class="form-group">
	          <%= f.label :name,class: "col-sm-3 control-label" %>
	          <div class="col-sm-8">
	            <%= f.text_field :name, class: "form-control" %>
	          </div>
	        </div>
	        <div class="form-group">
	          <%= f.label :contact_phone, class: "col-sm-3 control-label" %>
	          <div class="col-sm-8">
	            <%= f.text_field :contact_phone, class: "form-control" %>
	          </div>
	        </div>
	        <div class="form-group">
	          <%= f.label :status, class: "col-sm-3 control-label" %>
	            <div class="col-sm-8">
	              <%= f.check_box :status, data: {size: "small", toggle: "toggle"} %>
	          </div>
	        </div>
	      </div> 
	    </div>
    <%#- end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    
  });
</script>
