<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-5">
    <%= form_for([@deal_category], html: {class: "form-horizontal"}) do |f| %>
    <%= render "shared/error_messages", target: @deal_category %> 
    
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>  
    </div>
    <div class="form-group">
      <%= f.label :type, class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <label class="checkbox-inline">
          <%= f.radio_button :deal_type, 0 %> Deal
        </label>
        <label class="checkbox-inline">
          <%= f.radio_button :deal_type, 1 %> Last Minute Deal
        </label>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :priority_order, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :priority_order, class: "form-control" %>
        </div>
      </div> 
      <div class="form-group">
      <%= f.label :logo_image, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%- if f.object.logo_image.present? %>
          <img src='<%= f.object.logo_image %>' width='100' height='100'>
          <% end -%>  
          <%= f.file_field :logo_image %>
        </div>  
      </div> 
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: "btn btn-default" %>
      </div>
    </div>
    </div>
    <% end %>
  </div>
</div>
