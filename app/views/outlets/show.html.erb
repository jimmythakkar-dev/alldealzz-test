<div class="row title_header">
  <div class="col-md-8"><%= title_header(@store, "Outlet") %></div>
</div>

<ol class="breadcrumb">
  <%= outlet_breadcrumb_list(@outlet, 'Outlet Information') %>
</ol>

<div class="panel panel-default">
  <div class="panel-body">
     <div class="row">
      <div class="col-md-11">
        <h4>Outlet :  <span class="label label-default"><%= @outlet.locality.capitalize %></span></h4>
      </div>  
      <div class="col-md-1">
        <%= link_to 'Edit', edit_store_outlet_path(@store, @outlet), class: "btn btn-default" %>
      </div>
    </div>
    
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-md-6">
        <p>
          <strong>Address:</strong>
          <%= @outlet.address %>
        </p>
        <p>
          <strong>Locality:</strong>
          <%= @outlet.locality %>
        </p>
      <p>
        <strong>Status:</strong>
        <%-if @outlet.status %>
        <span class="badge alert-success">On</span>
        <%-else %>
        <span class="badge alert-danger">Off</span>
        <%-end %>
      </p>
      </div>
      <div class="col-md-6">
        <p>
          <strong>Location:</strong>
          <%= @outlet.location %>
        </p>
        <p>
          <strong>Location:</strong>
        <div class="gmaps-group">
          <p class='gmaps-show' id='gmaps-show-canvas'></p>
        </div>
        </p>
        <p>
          <strong>Radius:</strong>
          <%= @outlet.radius %> Kms
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">

      </div>
      <div class="col-md-6">

      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        lat = <%= @outlet.latitude %>;
        lng = <%= @outlet.longitude %>;
        map_elem = '#gmaps-show-canvas';
        showGmapsCompleter(lat, lng, map_elem);
    });
</script>
