<div class="row">
  <%= form_for([@sales_user, @sales_user_store], html: {class: "form-horizontal"}) do |f| %>
    <%= render "shared/error_messages", target: @sales_user_store %> 
  	  <div class="row">
	      <div class="col-md-6">
	        <div class="form-group">
	          <%= f.label :name, "Name *",class: "col-sm-3 control-label" %>
	          <div class="col-sm-8">
	            <%= f.text_field :name, class: "form-control" %>
	          </div>
	        </div>
          <div class="form-group">
            <%= f.label :status, class: "col-sm-3 control-label" %>
              <div class="col-sm-8">
                <%= f.check_box :status, data: {size: "small", toggle: "toggle"} %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :phone_number, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :phone_number, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :mgr_name, 'Manager name', class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :mgr_name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :mgr_contact_number, 'Manager contact number', class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :mgr_contact_number, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :owner_name, 'Owner name', class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :owner_name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :owner_contact_number, 'Owner contact number', class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :owner_contact_number, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, "Email",class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :logo, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%- if f.object.logo.url.present? %>
                <img src='<%= f.object.logo.url %>' width='100' height='100'>
                <%= link_to 'Download', f.object.logo.url, target: "_blank" if  f.object.logo.present? %>
              <% end -%>  
              <%= f.file_field :logo %>
            </div>  
          </div>
          <div class="form-group">
            <%= f.label :cover_pic, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%- if f.object.cover_pic.url.present? %>
                <img src='<%= f.object.cover_pic.url %>' width='100' height='100'>
                <%= link_to 'Download', f.object.cover_pic.url, target: "_blank" if  f.object.cover_pic.present? %>
              <% end -%>  
              <%= f.file_field :cover_pic %>
            </div>  
          </div>
	      </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :latitude, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :latitude, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :longitude,class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :longitude, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :address_line_one, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :address_line_one, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :address_line_two, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :address_line_two, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :start_time, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :start_time, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :end_time, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :end_time, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :working_days, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :working_days, class: "form-control" %>
            </div>
          </div>
        </div>  
	    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(document).ready(function () {
    
  });
</script>
