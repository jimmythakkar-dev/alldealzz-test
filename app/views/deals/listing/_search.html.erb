<div class="row">
  <div class="col-lg-7"></div>
  <div class="col-lg-2">
    <%= select_tag 'search[selected]', 
          options_for_select([ ["All", :all], ["Allowed", :allowed], ["Not Allowed", :not_allowed],
                               ["Sponsored", :sponsored], ["Expired in next 7 Days", :expired_in_next_7_days] ]),
          include_blank: false, class: "form-control" %>
  </div>
  <div class="col-lg-3">
    <%= search_field_tag 'search[text]', params[:search], placeholder: 'Search by main line', class: "form-control", width: '200px' %>
    <!-- <span class="input-group-btn">
      <button class="btn btn-default" type="button">Go!</button>
    </span> -->
  </div>
</div>