    <div class="form-group">
      <%= f.label :main_image,'Front Image',class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%- if f.object.main_image.present? && f.object.main_image.url.present? %>
          <img src='<%= f.object.main_image.url %>' width='100' height='100'>
        <% end -%>  
        <%= f.file_field :main_image %>
      </div>  
    </div>
