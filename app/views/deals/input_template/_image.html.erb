    <div class="form-group">
      <%= f.label :featured_image,'Collage Image',class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%- if f.object.featured_image.present? && f.object.featured_image.url.present? %>
          <img src='<%= f.object.featured_image.url %>' width='100' height='100'> 
        <% end -%>  
        <%= f.file_field :featured_image %>
      </div>  
    </div>

    <div class="form-group">
      <%= f.label :deal_detail_images, class: "col-sm-3 control-label" %>
      <div class="controls">
