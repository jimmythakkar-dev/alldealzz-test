<!DOCTYPE html>
<html>
	<head>
	  <title><%= Settings.app_name %> Admin</title>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>
	</head>
	<body class="mainboard light">
		<div class="container">
		  <%= render "api/shared/dashboard/header_nav" %>
		  
		  <!-- alert classes : alert-success, alert-info, alert-warning, alert-danger -->
		  <% if notice %> 
		    <div class="alert alert-success alert-dismissible" role="alert">
		      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		      <%= notice %>
		    </div>
		  <% end %> 
		  <% if alert # && user_signed_in? && (controller_name != 'devise/sessions') %> 
		    <div class="alert alert-danger alert-dismissible" role="alert">
		      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <%= alert %>
		    </div>
		  <% end %>      	

		  <%= yield %>

		  <nav class="navbar navbar-default navbar-fixed-bottom admin-footer">
		  	<div class="container-fluid col-md-offset-5 col-md-4">
		  	  <p class="navbar-text">Copyright@<%= Settings.app_name %></p>
		  	</div>
	  	</nav>
		</div>

	</body>
</html>
