<div class="row title_header">
  <div class="col-md-12"><h3><%= Settings.app_name %> Solutions <small>API Details</small></h3></div>
</div>

<div class="row title_header">
  <div class="col-md-4">
    <%= form_for(@api_detail, url: app_helpers_api_details_path(@api_detail), method: :get, 
        remote: true, html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <%= f.label :api_version, class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <%= f.select :api_version, ApiDetail.pluck(:api_version).uniq, include_blank: "Select", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :device_type, class: "col-sm-2 control-label" %>

        <div class="col-sm-10">
          <label class="checkbox-inline">
            <%= f.radio_button :device_type, false %> Google
          </label>
          <label class="checkbox-inline">
            <%= f.radio_button :device_type, true %> Apple
          </label>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Submit', class: "btn btn-default" %>
        </div>
      </div>
    <% end %>  
  </div>
  <div class="col-md-6" id="form_admin_helpers">
    <%= render 'api_detail_form' %>
  </div>
</div>
